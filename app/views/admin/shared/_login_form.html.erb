<%= form_tag session_path, { :class => "form-stacked" } do %>
    <fieldset>
        <div class="clearfix">
            <%= label_tag 'username' %>
            <div class="input">
                <%= text_field_tag 'login', @login %>
            </div>
        </div>

        <div class="clearfix">
            <%= label_tag 'password' %>
            <div class="input">
                <%= password_field_tag 'password', nil %>
            </div>
        </div>

        <ul class="inputs-list">
            <li>
                <label>
                    <%= check_box_tag 'remember_me', '1', @remember_me %>
                    <span>Remember me</span>
                </label>
            </li>
        </ul>
    </fieldset>
    <div class="actions">
        <%= submit_tag 'Log in', :class => 'btn' %>
    </div>
<% end %>
