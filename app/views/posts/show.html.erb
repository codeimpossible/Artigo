<% content_for :title do %>
<%= @post.title %>
<% end %>

<h2 id="title"><%= @post.title %> <% if logged_in? %><small>( <%= link_to "Edit", edit_post_path(@post) %> )</small><% end %></h2>
<p id="summary">
  <%= @post.summary %>
</p>
<hr />
<div id="content">
  <%= @post.body %>
</div>

<%= link_to 'Back', posts_path %>
<br />
<h2>Let's talk about this</h2>
<p><%= "Comments will show when the blog is running in production mode." if is_dev? %></p>
<% if !is_dev? %>
	<div id="disqus_thread"></div>
	<script type="text/javascript">
		var disqus_identifier = <%= @post.id %>;
	</script>
    <script type="text/javascript" src="http://codeimpossible.disqus.com/embed.js"></script>
	<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
<% end %>
<p>&nbsp;</p>
