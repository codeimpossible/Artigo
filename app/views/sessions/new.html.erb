<h2>Log In</h2>

<%= form_tag session_path do %>
    <p><%= label_tag 'username' %><%= text_field_tag 'login', @login %></p>
    <p><%= label_tag 'password' %><%= password_field_tag 'password', nil %></p>

    <p><%= check_box_tag 'remember_me', '1', @remember_me %><%= label_tag 'remember_me', 'Remember me' %></p>

    <p><%= submit_tag 'Log in', :class => 'button' %></p>
<% end %>
